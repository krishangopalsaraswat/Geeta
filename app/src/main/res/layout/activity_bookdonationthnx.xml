<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bookdonationthnx">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@drawable/librarybook"
        android:id="@+id/bookdimg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When you give someone a book, you donâ€™t give him just paper, ink, and glue, you give him the possibility of a whole new world."
        android:layout_below="@id/bookdimg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textSize="20sp"
        android:id="@+id/booksdtxt"
        android:layout_marginTop="20dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If u want to donate your books "
        android:layout_below="@+id/booksdtxt"
        android:layout_marginTop="10sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="15sp"
        android:textSize="15sp"
        android:id="@+id/booksdtxt2"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Click here"
        android:layout_below="@+id/booksdtxt2"
        android:layout_centerInParent="true"
        android:background="@drawable/gradient"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:onClick="openbooksdonation"/>

</RelativeLayout>