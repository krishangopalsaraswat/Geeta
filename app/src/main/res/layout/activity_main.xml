<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="36dp"
            app:srcCompat="@drawable/icon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Username"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@id/imageView"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="19sp"
            android:id="@+id/username"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/username"
            android:layout_marginTop="9dp"
            android:background="@drawable/et_bg"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:id="@+id/Name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Mobile"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@id/Name"
            android:layout_marginTop="11sp"
            android:layout_marginLeft="10sp"
            android:id="@+id/mobiletxt"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/et_bg"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:inputType="phone"
            android:id="@+id/Mobile"
            android:layout_below="@id/mobiletxt"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Current location"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/crrtxt"
            android:layout_below="@id/Mobile"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="11sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/et_bg"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/Currentlocation"
            android:layout_below="@id/crrtxt"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Preapering for"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/pftxt"
            android:layout_below="@id/Currentlocation"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="11sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/et_bg"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/Preaperingfor"
            android:layout_below="@id/pftxt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Studying in"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/stintxt"
            android:layout_below="@id/Preaperingfor"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="11sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/et_bg"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/Studyingin"
            android:layout_below="@id/stintxt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            android:id="@+id/cardView"
            android:layout_marginBottom="31dp"
            android:layout_below="@id/Studyingin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:background="@color/colorAccent"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>



        <ProgressBar
            android:id="@+id/mainprogressbar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </RelativeLayout>

</ScrollView>

